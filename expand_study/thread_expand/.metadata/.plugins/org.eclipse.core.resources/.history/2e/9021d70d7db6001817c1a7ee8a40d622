package com.yonyou07;

public class Student {
	private String name;
	private int age;
	private boolean flag; // true表示有数据,false表示无数据,默认false
	
	public synchronized void set(String name, int age) {
		if(this.flag) {
			try {
				this.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		//设置数据
		this.name = name;
		this.age = age;
	}
}
